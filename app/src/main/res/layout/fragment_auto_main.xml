<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="xu.qiwei.com.todomvvmtest.autolayouttest.viewmodels.AutoMainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_record_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/ComponentTitleStyle"
                    android:text="姓名" />

                <EditText
                    style="@style/ComponentInputStyle"
                    android:text="王二麻子" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/ComponentTitleStyle"
                    android:text="性别" />

                <xu.qiwei.com.todomvvmtest.com.zhy.view.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/component_customradio_bg"
                        android:drawableLeft="@drawable/record_radio"
                        android:gravity="center|left"
                        android:paddingBottom="12px"
                        android:paddingRight="12px"
                        android:paddingTop="12px"
                        android:text="男"
                        android:textColor="@drawable/component_customradio_textcolor"
                        android:textSize="38px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/component_customradio_bg"
                        android:drawableLeft="@drawable/record_radio"
                        android:gravity="center|left"
                        android:paddingBottom="12px"
                        android:paddingRight="12px"
                        android:paddingTop="12px"
                        android:text="女"
                        android:textColor="@drawable/component_customradio_textcolor"
                        android:textSize="38px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/component_customradio_bg"
                        android:drawableLeft="@drawable/record_radio"
                        android:gravity="center|left"
                        android:paddingBottom="12px"
                        android:paddingRight="12px"
                        android:paddingTop="12px"
                        android:text="不详"
                        android:textColor="@drawable/component_customradio_textcolor"
                        android:textSize="38px"
                        />
                </xu.qiwei.com.todomvvmtest.com.zhy.view.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/ComponentTitleStyle"
                    android:text="姓名" />

                <EditText
                    style="@style/ComponentInputStyle"
                    android:text="王二麻子" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/ComponentTitleStyle"
                    android:text="姓名" />

                <EditText
                    style="@style/ComponentInputStyle"
                    android:text="王二麻子" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

