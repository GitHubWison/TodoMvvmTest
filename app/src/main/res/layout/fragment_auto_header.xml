<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="xu.qiwei.com.todomvvmtest.autolayouttest.viewmodels.AutoHeaderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_bar_120" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_01" />
            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_02" />
            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_03" />
            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_04" />
            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_05" />
            <ImageView
                android:layout_width="180px"
                android:layout_height="40px"
                android:src="@drawable/visited_06" />


        </LinearLayout>

    </LinearLayout>
</layout>

